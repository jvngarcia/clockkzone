---
import VerticalDots from "./Icons/VerticalDotsIcon.astro";

interface Props {
    title: string;
    time: string;
}

const {title, time} = Astro.props;
---
<div class="flex justify-between items-center">
    <div class="flex flex-col">
        <h2 class="text-xl text-mine-shaft-950 dark:text-gray-200">{title}</h2>
        <p class="text-md text-mine-shaft-800 dark:text-gray-200">{time}</p>
    </div>
    <div class="dark:text-gray-200 text-mine-shaft-950">
        <VerticalDots/>
    </div>
</div>